    "swagger": "2.0",
    "info": {
        "description": "Onix Config Manager Discovery Service for Pilot Control",
        "title": "Pilot Control Discovery",
        "contact": {
            "name": "gatblau",
            "url": "http://onix.gatblau.org/",
